{
    "manifest_version": 3,
    "name": "Hashed History",
    "version": "1.0.0",
    "description": "Privacy-protected URL history tracking",
    "permissions": [
        "webNavigation",
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Hashed History",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}